 <div class="card" >
  <div class="card-header">
    <h1 style="text-align:center;"><a href="/post/{{post.id}}">{{post.title}}</a></h1>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">{{post.content}}</li>
    <li class="list-group-item" style="text-align:end">Created by: {{post.user.username}} on {{format_date post.date_created}}</li>
  </ul>
</div>

{{#each post.comments as |comment| }}

  <div class="card">
    <div class="card-header">

    <li class="list-group-item">
      {{comment.user.username}} on {{format_date comment.date_created}}
    </li>
    </div>
    <li class="list-group-item">
      {{comment.content}}
    </li> 
  </div>

{{/each}}


</div class="card">
  <div class="card-header">
    <div class="input-group">
      <span class="input-group-text">Create New Comment: </span>
      <textarea class="form-control" aria-label="With textarea"></textarea>
    </div>
  

  <form class="form new-post-form">
      <div class="form-group">
        <label for="post-title">Comment:</label>
        <input class="form-input" type="text" id="post-title" name="post-title" />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
  </form>
</div>

  <script src="./js/comments.js"></script>

