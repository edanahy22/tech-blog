{{#each posts as |post| }}

    <div class="card" >
  <div class="card-header">
    <a href="/post/{{id}}">{{title}}</a>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">{{content}}</li>
    <li class="list-group-item">Created by: {{user.username}} on {{format_date date_created}}</li>
  </ul>
</div>
 
{{/each}}



